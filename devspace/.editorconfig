# EditorConfig -- shared across all D:\DevSpace\ projects
# https://editorconfig.org
#
# Supported by: VS Code, Visual Studio, Unity, JetBrains, vim, etc.
# Projects can override specific rules with their own .editorconfig
# (set root = false or omit root to inherit from this file)

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.proto]
indent_size = 2

[*.sql]
indent_size = 2

[*.{cs,csx}]
indent_size = 4

[*.{sln,slnx,csproj,vbproj,vcxproj,props,targets}]
indent_size = 2

[*.{shader,hlsl,glsl,cginc,compute}]
indent_size = 4

[*.{json,jsonc}]
indent_size = 2

[*.{ps1,psm1,psd1}]
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf
indent_size = 4

[*.{rs,toml}]
indent_size = 4
